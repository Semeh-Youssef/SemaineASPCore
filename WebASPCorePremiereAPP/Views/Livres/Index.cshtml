@model IEnumerable<WebASPCorePremiereAPP.Models.Livre>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card" style="border: 2px solid #B6E28F; margin-bottom: 10px;">
                @*<div class="card-header"> @Html.DisplayNameFor(model => model.Categorie.Designation): @Html.DisplayFor(modelItem => item.Categorie.Designation) </div>*@
                <div class="card-body" style="padding:3px">
                    <img alt="photo livre" style="padding:2px;width:100%; height:16rem" class="img-fluid" src="~/Images/@Html.DisplayFor(modelItem => item.Photo)" />

                    <h5 class="card-title" style="font:bold"> @Html.DisplayFor(modelItem => item.Titre) </h5>
                    <h5 class="card-title">  @Html.DisplayFor(modelItem => item.Theme.Libelle) </h5>


                    <div>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </div>
                    @*<a href="#" class="btn btn-primary">Go somewhere</a>*@
                </div>
            </div>
        </div>
    }
</div>


